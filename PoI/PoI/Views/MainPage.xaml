<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PoI.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label HorizontalTextAlignment="Center" Text="{ Binding ProjectTitle }" />
        <Label HorizontalTextAlignment="Center" Text="{ Binding ProjectYear }" />
        <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{ Binding GroupName }" />
    </StackLayout>

</ContentPage>